{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/src/app"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "XDebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "windows": {
        "localSourceRoot": "${workspaceRoot}",
        "serverSourceRoot": "${env:WSL_XFORGE_PATH}"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Docker localhost",
      "port": 9222,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/src/angular-app/*"  
      }
    },
    {
      "name": "Launch Docker localhost",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/src/angular-app/*"  
      },
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    }
  ]
}